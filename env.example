# ===========================================
# Конфигурация Jira Estimate приложения
# ===========================================

# ===========================================
# Конфигурация базы данных PostgreSQL
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/jira_estimate
POSTGRES_DB=jira_estimate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# Конфигурация сервера
# ===========================================
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# ===========================================
# JWT конфигурация
# ===========================================
JWT_SECRET=your-very-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ===========================================
# Настройки Jira и AI сервисов
# ===========================================
# Настройки Jira и AI теперь настраиваются пользователями
# через интерфейс приложения в разделе "Настройки"

# ===========================================
# Конфигурация для Docker (опционально)
# ===========================================
# Порт для фронтенда в Docker
FRONTEND_PORT=3000

# ===========================================
# Дополнительные настройки безопасности
# ===========================================
# Соль для хеширования паролей (генерируется автоматически)
PASSWORD_SALT=your-password-salt-here

# Максимальное количество попыток входа
MAX_LOGIN_ATTEMPTS=5

# Время блокировки после неудачных попыток (в минутах)
LOGIN_LOCKOUT_TIME=15

# ===========================================
# Настройки логирования
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# Настройки для разработки
# ===========================================
# Раскомментируйте для режима разработки
# NODE_ENV=development
# DEBUG=true

# ===========================================
# SSL/TLS настройки (для production)
# ===========================================
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# HTTPS_PORT=443

# ===========================================
# Настройки резервного копирования
# ===========================================
# Путь для резервных копий базы данных
BACKUP_PATH=./backups

# Расписание резервного копирования (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# Настройки мониторинга
# ===========================================
# Включить метрики Prometheus
ENABLE_METRICS=true

# Порт для метрик
METRICS_PORT=9090

# ===========================================
# Настройки кэширования
# ===========================================
# Redis URL для кэширования (опционально)
# REDIS_URL=redis://localhost:6379

# ===========================================
# Настройки email уведомлений (опционально)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@yourcompany.com

# ===========================================
# Инструкции по настройке
# ===========================================
# 1. Скопируйте этот файл в .env
# 2. Заполните все необходимые переменные
# 3. Убедитесь, что пароли и ключи надежны
# 4. Для production измените NODE_ENV на production
# 5. Настройте SSL сертификаты для HTTPS
# 6. Регулярно обновляйте JWT_SECRET
